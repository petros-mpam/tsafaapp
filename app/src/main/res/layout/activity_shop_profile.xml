<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradient"
tools:context="com.tsafaapp.ShopProfileActivity">






<android.support.v7.widget.CardView
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="130dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp"
    android:id="@+id/cardViewaddnewoffer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/addnewoffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="+ Add new Product special offer"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/shopprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:text="Your Shop's Profile"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/shopsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/shopsaddress"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="55dp"
        android:text="Shop's Name"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/shopsaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toStartOf="@+id/textView10"
        android:text="Shop's Address"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shopsname"
        android:layout_alignBottom="@+id/shopsname"
        android:layout_alignStart="@+id/cardView"
        android:text="Name:"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="32dp"
        android:text="Address:"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginEnd="12dp"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/youroffersbutton"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="48dp"
        android:text="Your Offers" />

</RelativeLayout>

