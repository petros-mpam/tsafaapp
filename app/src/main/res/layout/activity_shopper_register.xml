<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.tsafaapp.ShopperRegisterActivity">

    <EditText
        android:id="@+id/Shopetname"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Shop's Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Shopetaddress"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_alignStart="@+id/Shopetname"
        android:layout_below="@+id/Shopetname"
        android:layout_marginTop="30dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ShopetLongitude"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/ShopetLatitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Map Longitude"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ShopetLatitude"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_below="@+id/Shopetaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Map Latitude"
        android:inputType="textPersonName" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Create your Shop account and advertise your products"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>