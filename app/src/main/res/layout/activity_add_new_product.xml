<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.tsafaapp.AddNewProductOfferActivity">

    <EditText
        android:id="@+id/etdescription"
        android:layout_width="200dp"
        android:layout_height="25dp"


        android:layout_alignStart="@+id/etInitialValue"
        android:layout_below="@+id/etInitialValue"
        android:layout_marginTop="15dp"
        android:background="#11000000"
        android:ems="12"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etInitialValue"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/etProduct"
        android:layout_below="@+id/etProduct"
        android:layout_marginTop="22dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Initial Value"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etCategory"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Product Category"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etProduct"
        android:layout_width="200dp"
        android:layout_height="25dp"

        android:layout_alignStart="@+id/etCategory"
        android:layout_below="@+id/etCategory"
        android:layout_marginTop="28dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="textPersonName" />


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Upload the offer"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Create your new product"
        android:textColor="#fff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bLogout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:text="Logout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etdescription"
        android:layout_marginTop="27dp"
        app:srcCompat="@drawable/cast_abc_scrubber_control_off_mtrl_alpha" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:text="Upload photo" />

</RelativeLayout>